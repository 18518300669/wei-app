.publish-container {
  width: 100%;
  height: 100%;
}
.publish-container .item {
  display: flex;
  padding:30rpx;
  border-bottom: 1px solid #ccc;
}
.item > view {
  font-size: 36rpx;
  color: #666;
}
.item >view:last-child{
  flex: 1;
  padding-left: 10rpx;
  font-weight: 100;
}
.item >view:first-child{
  width: 170rpx;
  font-weight: 300;
}
radio-group{
  display: flex
}
radio-group label{
  display: flex;
  align-items: center;
}
radio-group label:last-child{
  margin-left: 40rpx;
}
button{
  margin: 20rpx;
}
.success view{
  padding: 60rpx 20rpx;
  text-align: center;
}